<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Votre Email"
        android:id="@+id/txt_email"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Nom"
            android:id="@+id/txt_nom"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="Prénom"
            android:id="@+id/txt_prenom"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Numéro de téléphone"
        android:inputType="phone"
        android:id="@+id/txt_telephone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Votre Mot de passe"
        android:inputType="textPassword"
        android:id="@+id/txt_password"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirmation mot de passe"
        android:inputType="textPassword"
        android:id="@+id/txt_password_confirm"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        android:id="@+id/btn_inscription"/>

</LinearLayout>